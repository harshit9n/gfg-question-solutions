class Solution{
    public:
    // arr: input array
    // n: size of array
    //Function to sort the array into a wave-like array.
    void convertToWave(int n, vector<int>& arr){
        
        // Your code here
        int count=n/2;;
        int m=0;
        for(int i=0;i<n;i++)
        {
            if(n==1)
            {
                break;
            }
            swap(arr[i],arr[i+1]);
            m++;
            i++;
            if(m>=count)
            {
                break;
            }
        }
        
    }
};
